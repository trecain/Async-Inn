@model Async_Inn.Models.Room

@{
    ViewData["Title"] = "Create";
    Layout = "_Layout";
}

<h2>Add New Room</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Layout" class="control-label"></label>
                <select asp-for="Layout" asp-items="@Html.GetEnumSelectList<Async_Inn.Models.Layout>()" class="form-control"></select>
                <span asp-validation-for="Layout" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Room" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}